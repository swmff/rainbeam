{
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentWidth": 4,
        "indentStyle": "space",
        "lineWidth": 80
    },
    "linter": {
        "rules": {
            "complexity": {
                "useArrowFunction": "off",
                "useOptionalChain": "off"
            },
            "style": {
                "useTemplate": "off",
                "noParameterAssign": "off"
            },
            "suspicious": {
                "noExplicitAny": "off"
            }
        }
    }
}
