%s:raw_base.content

- let config = &self.config
- let name = &config.name

%div#page
    %div.sidebar
        %nav
            %a.button.desktop.title[href="/"]
                %r:
                    <img
                        src="/static/images/ui/logo.svg"
                        alt="{name}"
                        width="32px"
                        height="32px"
                        class="title-content"
                        id="title-img"
                    />
                %-r:
                %b.title-content[style="display: none"]
                    {name}
                %end
            %end
        %end
    %end

    %div.content_container#page_content
        %slot[name="content"]'
    %end

    %div.sidebar'
%end

%footer'
